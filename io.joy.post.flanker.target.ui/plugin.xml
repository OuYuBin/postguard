<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            category="com.keliangtek.simulab.category"
            class="io.joy.post.flanker.target.ui.views.SimulabTargetView"
            icon="icons/servers_view.gif"
            id="com.keliangtek.simulab.target.ui.views.SimulabTargetView"
            name="PostFlanker环境">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="com.keliangtek.simulab.target.ui.views.SimulabTargetView">
         <popupMenu
               id="com.keliangtek.simulab.target.ui.views.SimulabTargetView#PopupMenu">
            <insertionPoint
                  name="group.new"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.edit"
                  separator="true">
            </insertionPoint>
         </popupMenu>
      </viewer>
      <viewerContentBinding
            viewerId="com.keliangtek.simulab.target.ui.views.SimulabTargetView">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="com.keliangtek.simulab.target.ui.navigatorContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding
            viewerId="com.keliangtek.simulab.target.ui.views.SimulabTargetView">
         <includes>
            <actionExtension
                  pattern="com.keliangtek.simulab.target.ui.views.providers.SimulabNewTargetCommonActionProvider">
            </actionExtension>
            <actionExtension
                  pattern="com.keliangtek.simulab.target.ui.views.providers.SimulabTargetEditCommonActionProvider">
            </actionExtension>
            <actionExtension
                  pattern="com.keliangtek.simulab.target.ui.views.providers.SimulabTargetOpenCommonActionProvider">
            </actionExtension>
            <actionExtension
                  pattern="com.keliangtek.simulab.target.ui.views.providers.PostFlankerHiddenMenuActionProvider">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="io.joy.post.flanker.target.ui.views.providers.SimulabTargetTreeContentProvider"
            id="com.keliangtek.simulab.target.ui.navigatorContent"
            labelProvider="io.joy.post.flanker.target.ui.views.providers.SimulabTargetTreeLabelProvider"
            name="Simulab Target NavigatorContent"
            priority="high">
         <triggerPoints>
            <or>
               <instanceof
                     value="com.keliangtek.simulab.target.core.models.ISimulabTarget">
               </instanceof>
               <instanceof
                     value="com.keliangtek.simulab.target.core.models.SimulabTargetTopology">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="com.keliangtek.simulab.target.core.models.ISimulabTarget">
               </instanceof>
               <instanceof
                     value="com.keliangtek.simulab.target.core.models.SimulabTargetTopology">
               </instanceof>
            </or>
         </possibleChildren>
         <actionProvider
               class="io.joy.post.flanker.target.ui.views.providers.SimulabNewTargetCommonActionProvider"
               id="com.keliangtek.simulab.target.ui.views.providers.SimulabNewTargetCommonActionProvider">
            <enablement>
               <or>
                  <adapt
                        type="java.util.Collection">
                     <count
                           value="0">
                     </count>
                  </adapt>
                  <instanceof
                        value="com.keliangtek.simulab.target.core.models.ISimulabTarget">
                  </instanceof>
                  <instanceof
                        value="com.keliangtek.simulab.target.core.models.SimulabTargetTopology">
                  </instanceof>
               </or>
            </enablement>
         </actionProvider>
         <actionProvider
               class="io.joy.post.flanker.target.ui.views.providers.SimulabTargetEditCommonActionProvider"
               id="com.keliangtek.simulab.target.ui.views.providers.SimulabTargetEditCommonActionProvider">
            <enablement>
               <and>
                  <instanceof
                        value="com.keliangtek.simulab.target.core.models.ISimulabTarget">
                  </instanceof>
                  <not>
                     <test
                           property="com.keliangtek.simulab.target.ui.isLocalHost">
                     </test>
                  </not>
                  <not>
                     <test
                           property="com.keliangtek.simulab.target.ui.isDevNode">
                     </test>
                  </not>
               </and>
            </enablement>
         </actionProvider>
         <actionProvider
               class="io.joy.post.flanker.target.ui.views.providers.SimulabTargetOpenCommonActionProvider"
               id="com.keliangtek.simulab.target.ui.views.providers.SimulabTargetOpenCommonActionProvider">
            <enablement>
               <and>
                  <instanceof
                        value="com.keliangtek.simulab.target.core.models.ISimulabTarget">
                  </instanceof>
                  <not>
                     <test
                           property="com.keliangtek.simulab.target.ui.isLocalHost">
                     </test>
                  </not>
               </and>
            </enablement>
         </actionProvider>
         <actionProvider
               class="io.joy.post.flanker.target.ui.views.providers.SimulabTargetActiveDevNodeCommonActionProvider">
            <enablement>
               <and>
                  <instanceof
                        value="com.keliangtek.simulab.target.core.models.ISimulabTarget">
                  </instanceof>
                  <not>
                     <test
                           property="com.keliangtek.simulab.target.ui.isDevNode">
                     </test>
                  </not>
               </and>
            </enablement>
         </actionProvider>
         <actionProvider
               class="io.joy.post.flanker.target.ui.views.providers.PostFlankerHiddenMenuActionProvider"
               id="com.keliangtek.simulab.target.ui.views.providers.PostFlankerHiddenMenuActionProvider">
         </actionProvider>
         <override
               policy="InvokeAlwaysRegardlessOfSuppressedExt"
               suppressedExtensionId="org.eclipse.ui.navigator.resourceContent">
         </override>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:simulab.target.new.menu?after=additions">
         <command
               commandId="com.keliangtek.simulab.target.ui.newtargetcommand"
               icon="icons/target--plus.png"
               label="目标环境"
               style="push">
            <visibleWhen
                  checkEnabled="false">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.keliangtek.simulab.target.ui.newtargetcommand"
            name="New Target">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="io.joy.post.flanker.target.ui.handles.SimulabNewTargetHandler"
            commandId="com.keliangtek.simulab.target.ui.newtargetcommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="io.joy.post.flanker.target.ui.views.propertyTest.SimulabTargetModelPropertyTester"
            id="com.keliangtek.simulab.target.ui.views.propertyTest.SimulabTargetModelPropertyTester"
            namespace="com.keliangtek.simulab.target.ui"
            properties="isLocalHost,isDevNode"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
